<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- App Title -->
        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StudyXStudy"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"/>

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back!"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <!-- User Name -->
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="32dp"/>

        <!-- Motivational Quote Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Quote of the Day"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvQuote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading quote..."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Progress Stats Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Today's Progress"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvTasksCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ… Tasks Completed: 0"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvStudyTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â±ï¸ Study Time: 0m"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tvStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ Study Streak: 0 days"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SDG Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSDG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ SDG 4: Quality Education"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Mission: Help students track progress, manage tasks, and build effective study habits for lifelong learning."
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Logout"
            android:textSize="16sp"
            android:backgroundTint="#D32F2F"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"/>

    </LinearLayout>
</ScrollView>